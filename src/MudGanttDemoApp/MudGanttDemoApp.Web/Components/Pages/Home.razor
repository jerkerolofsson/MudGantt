@page "/"
@using MudBlazor

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<MudGanttChart Tasks="@_tasks" Color="@_color" Variant="@_variant" Style="height: 400px" />

<MudStack Row>
    <MudRadioGroup @bind-Value="@_color">
        <MudRadio Value="Color.Primary">Primary</MudRadio>
        <MudRadio Value="Color.Secondary">Secondary</MudRadio>
        <MudRadio Value="Color.Tertiary">Tertiary</MudRadio>
        <MudRadio Value="Color.Success">Success</MudRadio>
        <MudRadio Value="Color.Default">Default</MudRadio>
        <MudRadio Value="Color.Surface">Surface</MudRadio>
    </MudRadioGroup>

    <MudRadioGroup @bind-Value="@_variant">
        <MudRadio Value="Variant.Outlined">Outlined</MudRadio>
        <MudRadio Value="Variant.Filled">Filled</MudRadio>
    </MudRadioGroup>
</MudStack>

@code {
    private Color _color = Color.Primary;
    private Variant _variant = Variant.Filled;

    private List<MudGanttTask> _tasks = [
        new MudGanttTask
        {
            Id = "implementation",
            Name = "Implement gantt charts",
            StartDate = new DateTimeOffset(2026,6,24,0,0,0,TimeSpan.Zero),
            EndDate = new DateTimeOffset(2026,6,25,0,0,0,TimeSpan.Zero),
        },

        new MudGanttTask
        {
            Id = "tests",
            Name = "Add tests",
            StartDate = new DateTimeOffset(2026,6,26,0,0,0,TimeSpan.Zero),
            EndDate = new DateTimeOffset(2026,6,27,0,0,0,TimeSpan.Zero),
            DependentOn = ["implementation"]
        },

        new MudGanttTask
        {
            Id = "release",
            Name = "Release nuget package",
            StartDate = new DateTimeOffset(2026,6,27,0,0,0,TimeSpan.Zero),
            EndDate = new DateTimeOffset(2026,6,28,0,0,0,TimeSpan.Zero),
            DependentOn = ["tests"]
        },
    ];
}